@model List<Slider>
@{
    int counter = 0;
}
<div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">No</th>
                <th scope="col">Title</th>
                <th scope="col">Description</th>
                <th scope="col">Image</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var slider in Model)
            {
                counter++;
                <tr>
                    <th scope="row">@counter</th>
                    <td>@slider.Title</td>
                    <td>@slider.Description</td>
                    <td><img src="~/uploads/sliders/@slider.ImageUrl"/></td>
                </tr>
            }
           
        </tbody>
    </table>
</div>
